<div class="message-card">
  <p class="message-name"><%= message.name %></p>
  <p class="message-text"><%= message.text %></p>
  <div class="message-card-bottom">
    <p class="message-added">Posted: <%= message.added %></p>
    <a class="view-post-link" href="/message/<%= message.id %>"
      >View Full Post</a
    >
  </div>
</div>
