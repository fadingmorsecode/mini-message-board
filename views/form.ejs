<html>
  <link rel="stylesheet" href="/styles.css" />
  <body>
    <%- include('header.ejs') %>
    <form method="POST" action="/new">
      <legend>New Message</legend>
      <label for="message-form-name-input">Name:</label>
      <input name="messageName" id="messageName" type="text" required />
      <label for="messageText">Message:</label>
      <input
        name="messageText"
        id="messageText"
        type="text"
        maxlength="300"
        required
      />
      <button type="submit">Submit</button>
    </form>
    <%- include('footer.ejs') %>
  </body>
</html>
